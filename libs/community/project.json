{
  "name": "community",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/community/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/community",
        "main": "libs/community/src/index.ts",
        "tsConfig": "libs/community/tsconfig.lib.json",
        "assets": ["libs/community/*.md"]
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs community {args.ver} {args.tag}",
      "dependsOn": ["build"]
    }
  },
  "tags": []
}
